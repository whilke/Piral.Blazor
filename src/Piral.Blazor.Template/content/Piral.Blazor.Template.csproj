<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <PiralInstance>$(piralInstance)</PiralInstance>
    <NpmRegistry>$(npmRegistry)</NpmRegistry>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.17" />
    <PackageReference Include="Piral.Blazor.DevServer" Version="7.0.14" PrivateAssets="all" />
    <PackageReference Include="Piral.Blazor.Utils" Version="7.0.14" />
    <PackageReference Include="Piral.Blazor.Tools" Version="7.0.14" ExcludeAssets="runtime" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".npmrc" Visible="false" />
  </ItemGroup>

</Project>
